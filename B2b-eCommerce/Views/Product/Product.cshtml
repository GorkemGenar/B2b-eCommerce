@model B2b_eCommerce.Models.Identity.SupplyProducts
@{
    ViewBag.Title = "Product";
}

<!-- Searching Div -->
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background:rgba(0,0,0,.03) !important;">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
        <div class="container">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Find Buyer</button>
                <button class="btn btn-outline-success my-2 my-sm-0 ml-1" type="submit">Find Supplier</button>
            </form>
        </div>
    </div>
</nav>

<!-- Product-Company Details Div -->
<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="card" style="font-size:12px;">
                <div class="card-header" style="font-size:16px; color: #007bff;">
                    Product Details
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/B2b-theme/images/seeds.jpg" style="width: 170px; height: 190px;" /><br>
                        </div>
                        <div class="col-md-8">
                            <p><b>Product Name :</b> @Model.ProductName</p>
                            <p><b>Supply Capacity :</b>@Model.Supply.SupplyCapacity</p>
                            <p><b>Size :</b> @Model.Supply.Size</p>
                            <p><b>Origin :</b> </p>
                            <p><b>Country :</b> @Model.User.Country</p>
                            <p><b>City :</b></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p><b>Min. Order Quantity :</b> @Model.Supply.MinimumOrderQuantity</p>
                            <p><b>Payment Condition :</b> @Model.Supply.PaymentTerms</p>
                            <p><b>Delivery Condition :</b> @Model.Supply.DeliveryCondition</p>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault01">First name :</label>
                                <input type="text" class="form-control" id="validationDefault01" placeholder="First name" value="First name" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault02">Last name :</label>
                                <input type="text" class="form-control" id="validationDefault02" placeholder="Last name" value="Last name" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationDefault03">Company Name :</label>
                                <input type="text" class="form-control" id="validationDefault03" placeholder="Company Name" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationDefault03">Message :</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                                <label class="form-check-label" for="invalidCheck2">
                                    Agree to terms and conditions
                                </label>
                            </div>
                        </div>
                        <button class="btn btn-outline-primary btn-circle btn-sm" type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card" style="font-size:12px" ;>
                <div class="card-header" style="font-size:16px; color: #007bff;">
                    <img src="~/B2b-theme/images/flags/tr.png" />
                    Company Details
                </div>
                <div class="card-body">
                    <p><b>Company Name :</b> @Model.User.CompanyName</p>
                    <p><b>Company Size :</b></p>
                    <p><b>Contact Information :</b>@Model.User.Phone</p>
                    <p><b>Company Type :</b> @Model.User.CompanyType</p>
                    <p><b>Year of Establishment :</b> @Model.User.YearofEstablishment</p>
                    <p><b>Website :</b> @Model.User.Website</p>
                    <p><b>Address :</b> @Model.User.Address</p>
                    <p><b>Products :</b></p>
                    <p><b>Email :</b>@Model.User.Email</p>
                    <p><b>Phone :</b>@Model.User.Phone</p>
                </div>
            </div>
        </div>
    </div>
</div>

