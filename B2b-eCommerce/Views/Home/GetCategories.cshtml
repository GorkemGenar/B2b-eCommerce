@using B2b_eCommerce.Models
@model List<B2b_eCommerce.Models.CategoryViewMdl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <ul class="list-group" id="panel">

        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/CategorysProduct/Products/@item.Id" class="text-dark"><b>@item.CategoryName</b></a>
                <span class="badge badge-success badge-pill ml-1">@item.ProdCount</span>
            </li>
        }
        @if (Model.Count() <= 10)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <input style="font-weight:700;" class="btn btn-link text-dark p-0" type="submit" value="Other Categories" /><i class="fa fa-chevron-down" aria-hidden="true"></i>
            </li>
        }

    </ul>
}



