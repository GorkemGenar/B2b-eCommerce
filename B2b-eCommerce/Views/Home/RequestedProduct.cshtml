@using B2b_eCommerce.Models.Identity
@model List<Buying>

<div class="row">
    @{ int counter = 0;}
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card-group mt-2">
                <div class="card bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">
                        <div id="carouselExampleControls-1" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/B2b-theme/images/seeds.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/B2b-theme/images/seeds.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/B2b-theme/images/seeds.jpg" alt="Third slide">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-title"><b>@item.ProductName</b></p>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="card-text"><img src="~/B2b-theme/images/flags/cn.png">@item.User.Country</p>
                            </div>
                            <div class="col-md-6">
                                <a href="/Buyer/Buyer/@item.Id" class="btn btn-outline-primary btn-circle btn-sm" style="float: right;">Get Contact</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        counter = counter + 1;

        if(counter == 8)
        {
            break;
        }
    }
</div>