@using PagedList;
@using PagedList.Mvc;
@model List<B2b_eCommerce.Models.Identity.Supply>

<div id="multi-item-example" class="carousel slide carousel-multi-item mt-2" data-ride="carousel">
    <div class="carousel-inner p-0 " role="listbox">
        <div class="carousel-item active">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="col-md-3 p-0" style="float:left">
                    <div class="card mb-2">
                        <img class="card-img-top p-1" src="~/B2b-theme/images/example.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">@Model[i].ProductName</h4>
                            <p class="card-text">
                                @Model[i].GeneralProductInformation
                            </p>
                            <a href="/Product/Product/@Model[i].Id" class="btn btn-outline-primary btn-circle btn-sm" style="float: right;">Primary</a>
                        </div>
                    </div>
                </div>
            }
        </div>
