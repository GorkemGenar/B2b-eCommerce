@model B2b_eCommerce.Models.SearchBarMdl
@{
    ViewBag.Title = "Index";
}
<div class="m_slider">
    <div class="row">
        <!--Categories Menu -->
        <div class="col-md-2">
            @Html.Action("GetCategories", "Home")
        </div>
        <div class="col-md-10">
            <!--Searchbar-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background:rgba(0,0,0,.03) !important;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                    <div class="container">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="input-group md-form form-sm form-2 pl-0">
                                        @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control my-0 py-1 lime-border", placeholder = "Search", type = "text" } })
                                        <div class="input-group-append">
                                            <input type="submit" class="btn btn-outline-success my-2 my-sm-0" value="Search" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </nav>
            <!--Slider-->
            <div class="row">
                <div class="col-md-12">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block" src="~/B2b-theme/images/example.jpg" alt="First slide" style="width:100%; height:460px;">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block" src="~/B2b-theme/images/example.jpg" alt="Second slide" style="width:100%; height:460px;">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block" src="~/B2b-theme/images/example.jpg" alt="Third slide" style="width:100%; height:460px;">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Buying Request -->
            <div class="row">
                <div class="col-md-12">
                    <div class="row pt-4">
                        <div class="col-md-12">
                            <ul class="nav nav-tabs">
                                <li class="nav-item" style="background:rgba(0,0,0,.03)">
                                    <span class="nav-link active" style="color: #007bff; background-color:#ffffff; ">Buying Request</span>
                                </li>
                            </ul>
                            @Html.Action("BuyingRequestTable", "Home")
                        </div>
                    </div>
                </div>
            </div>
            <!-- Products -->
            <div class="row">
                <div class="col-md-12">
                    <ul class="nav nav-tabs">
                        <li class="nav-item" style="background:rgba(0,0,0,.03)">
                            <span class="nav-link active" style="color: #007bff; background-color:#ffffff;">Products</span>
                        </li>
                    </ul>
                    @Html.Action("SupplierProducts", "Home")
                </div>
            </div>
            <!-- Requested Products -->
            <div class="row">
                <div class="col-md-12">
                    <div class="dealing-table">
                        <div class="row">
                            <div class="col-md-12">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item" style="background:rgba(0,0,0,.03)">
                                        <span class="nav-link active" style="color: #007bff; background-color:#ffffff;">Requested Products</span>
                                    </li>
                                </ul>
                                @Html.Action("RequestedProduct", "Home")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Memberships -->
            <div class="row">
                <div class="col-md-12">
                    <ul class="nav nav-tabs">
                        <li class="nav-item" style="background:rgba(0,0,0,.03)">
                            <span class="nav-link active" style="color: #007bff; background-color:#ffffff;">Memberships</span>
                        </li>
                    </ul>
                    <div class="row mt-2">
                        <div class="col-md-4">
                            <div class="card">
                                <img class="card-img-top-1" src="~/B2b-theme/images/gold.png" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">Card title</h5>
                                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                    <a href="/Account/GetPremium" class="btn btn-outline-warning" style="float: right;">Get Premium</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <img class="card-img-top-1" src="~/B2b-theme/images/silver.png" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">Card title</h5>
                                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                    <a href="/Account/GetPremium" class="btn btn-outline-secondary" style="float: right">Button</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <img class="card-img-top-1" src="~/B2b-theme/images/free.png" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">Card title</h5>
                                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                    <a href="/Account/GetPremium" class="btn btn-outline-dark" style="float: right">Button</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table Div-->
            <div class="row mt-4">
                <div class="col-md-12">
                    <ul class="nav nav-tabs">
                        <li class="nav-item" style="background:rgba(0,0,0,.03)">
                            <span class="nav-link active" style="color: #007bff; background-color:#ffffff; ">Suppliers</span>
                        </li>
                    </ul>
                    <div class="table-responsive col-xs-12 nopadding hidden-xs mt-2">
                        @Html.Action("SupplierTbl", "Home")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>