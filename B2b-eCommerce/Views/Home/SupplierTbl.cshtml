@model List<B2b_eCommerce.Identity.ApplicationUser>
<table id="SupplierTbl" class="table table-bordered">
    <thead>
        <tr>
            <th>Supplier Name</th>
            <th>Sector</th>
            <th>Company Types</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CompanyName</td>
                <td>@item.Sector</td>
                <td>@item.CompanyType</td>
                <td>@item.Country</td>
                <td><a href="" type="button" class="btn btn-outline-primary">Go to the Supplier's Page</a></td>
            </tr>
        }
    </tbody>
</table>

