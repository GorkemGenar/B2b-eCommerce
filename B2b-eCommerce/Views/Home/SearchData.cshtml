@model B2b_eCommerce.Models.SearchBarMdl
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control mr-sm-2", placeholder = "Search" } })
    <input type="submit" class="btn btn-outline-success my-2 my-sm-0" value="Search" />
}




