@model List<B2b_eCommerce.Models.ProductCategories>
@{
    ViewBag.Title = "Index";
}
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background:rgba(0,0,0,.03) !important;">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
        <div class="container">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Find Buyer</button>
                <button class="btn btn-outline-success my-2 my-sm-0 ml-1" type="submit">Find Supplier</button>
            </form>
        </div>
    </div>
</nav>
<div class="container mt-5">
    <ul class="nav nav-tabs">
        <li class="nav-item" style="background:rgba(0,0,0,.03)">
            <h5 style="margin-bottom:0px; color: #000000; background-color:#ffffff;" class="nav-link active">Products</h5>
        </li>
    </ul>
    <div class="row m-0">
        <div col-md-12>

            @{ int counter = 0; }
            <div id="multi-item-example" class="carousel slide carousel-multi-item mt-2" data-ride="carousel" data-interval="false">
                <div class="carousel-inner p-0" role="listbox">
                    <div class="carousel-item active">
                        <div class="row">
                            @for (int j = 0; j < Model.Count(); j++)
                            {
                                <div class="col-md-6 mt-2">
                                    <div class="card" border-radius: 10px;">
                                        <div class="row" style="position:relative !important;">
                                            <div class="col-md-4" style="border-right: solid 1px rgba(0,0,0,.125);">
                                                <img src="~/B2b-theme/images/example.jpg" style="width: 100%; height:100%; border-radius:10px 0px 0px 10px; padding:5px;" />
                                            </div>
                                            <div class="col-md-8">
                                                <div class="row mt-1">
                                                    <div class="col-md-6">
                                                        <b>Company Name: </b> <span style="margin-left:2px;">@Model[counter].SupplierName</span>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <b>Product: </b> <span style="margin-left:2px;">@Model[counter].ProductName</span>
                                                    </div>
                                                </div>
                                                <div class="row mt-2">
                                                    <div class="col-md-12">
                                                        <p>
                                                            @Model[counter].Description
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="row mt-1">
                                                    <div class="col-md-6">
                                                        <b>Country: </b> <span style="margin-left:2px;">@Model[@counter].Country </span>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <a href="/Product/Product/@Model[counter].SupplyId" class="btn btn-outline-primary btn-circle btn-sm mr-2 mb-2" style="float: right;">Contact Now</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                counter = counter + 1;
                            }
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.Count() > 8)
            {
                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="controls-top mr-10">
                            <center>
                                <a class="btn btn-outline-primary btn-circle btn-sm" href="#multi-item-example" data-slide="prev"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>
                                <a class="btn btn-outline-primary btn-circle btn-sm" href="#multi-item-example" data-slide="next"><i class="fa fa-chevron-right" aria-hidden="true"></i></a>
                            </center>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="container" style="margin-top:50px;">
    <ul class="nav nav-tabs">
        <li class="nav-item" style="background:rgba(0,0,0,.03)">
            <h5 style="margin-bottom:0px; color: #000000; background-color:#ffffff;" class="nav-link active">Suppliers</h5>
        </li>
    </ul>
    <div class="table-responsive col-xs-12 nopadding hidden-xs" style="margin-top:20px;">
        @Html.Action("SupplierTbl", "CategorysProduct")
    </div>
</div>

