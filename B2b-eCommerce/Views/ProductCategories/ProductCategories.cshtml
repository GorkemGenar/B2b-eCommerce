
@{
    ViewBag.Title = "ProductCategories";
}

<!-- Searching Div -->
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background:rgba(0,0,0,.03) !important;">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
        <div class="container">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Find Buyer</button>
                <button class="btn btn-outline-success my-2 my-sm-0 ml-1" type="submit">Find Supplier</button>
            </form>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <ul class="nav nav-tabs">
        <li class="nav-item" style="background:rgba(0,0,0,.03)">
            <h5 style="margin-bottom:0px; color: #000000; background-color:#ffffff;" class="nav-link active">Products</h5>
        </li>
    </ul>
    <div class="row mt-4">
        <div class="col-md-12">
            @Html.Action("GetCategory", "ProductCategories")
        </div>
    </div>
    @Html.Action("GetProducts", "ProductCategories")
</div>

<div class="container" style="margin-top:50px;">
    <ul class="nav nav-tabs">
        <li class="nav-item" style="background:rgba(0,0,0,.03)">
            <h5 style="margin-bottom:0px; color: #000000; background-color:#ffffff;" class="nav-link active">Suppliers</h5>
        </li>
    </ul>
    <div class="table-responsive col-xs-12 nopadding hidden-xs" style="margin-top:20px;">
        @Html.Action("SupplierTbl", "ProductCategories")
    </div>
</div>
