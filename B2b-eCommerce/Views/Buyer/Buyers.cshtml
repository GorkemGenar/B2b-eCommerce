
@{
    ViewBag.Title = "Buyers";
}

<!-- Searching Div -->
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background:rgba(0,0,0,.03) !important;">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
        <div class="container">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Find Buyer</button>
                <button class="btn btn-outline-success my-2 my-sm-0 ml-1" type="submit">Find Supplier</button>
            </form>
        </div>
    </div>
</nav>

<!--Products List-->
<div class="container mt-5">
    <ul class="nav nav-tabs">
        <li class="nav-item" style="background:rgba(0,0,0,.03)">
            <span class="nav-link active" style="color: #000000; background-color:#ffffff; "><b>Buyers</b></span>
        </li>
    </ul>
    <div class="row mt-4">
        <div class="col-md-12">
            @Html.Action("GetProduct", "Buyer")
        </div>
    </div>
    @Html.Action("GettingBuyer", "Buyer")
</div>

<!--Buying Requests-->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row pt-4">
                <div class="col-md-12">
                    <ul class="nav nav-tabs">
                        <li class="nav-item" style="background:rgba(0,0,0,.03)">
                            <span class="nav-link active" style="color: #000000; background-color:#ffffff; "><b>Buying Requests</b></span>
                        </li>
                    </ul>
                    @Html.Action("BuyingRequestsTable", "Buyer")
                                
                </div>
            </div>
        </div>
    </div>
</div>

