@model List<B2b_eCommerce.Models.Identity.Supply>

@{
    var RouteId = Url.RequestContext.RouteData.Values["id"];


    if (RouteId != null)
    {
        if (Model.Count() == 0)
        {
            <div class="alert alert-danger" role="alert">
                No Suppliers were found belongs to the product you are looking for.
            </div>
        }
        else if (Model.Count() == 1)
        {
            <div class="alert alert-success" role="alert">
                @Model.Count() Supplier has been listed.
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                @Model.Count() Suppliers have been have been listed.
            </div>
        }
    }
    <div class="row">
        <div class="col-md-8">
            <div id="multi-item-example" class="carousel slide carousel-multi-item mt-2" data-ride="carousel" data-interval="false">
                <div class="carousel-inner p-0" role="listbox">
                    <div class="carousel-item active">
                        @{
                            int counter1 = 0;
                            for (int i = counter1; i < Model.Count(); i++)
                            {
                                <div class="card mt-2" style="border-radius: 10px;">
                                    <div class="row">
                                        <div class="col-md-4" style="border-right: solid 1px rgba(0,0,0,.125);">
                                            <img src="~/B2b-theme/images/example.jpg" style="width: 100%; height:100%; border-radius:10px 0px 0px 10px; padding:5px;" />
                                        </div>
                                        <div class="col-md-8">
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <b>Company Name: </b> <span style="margin-left:2px;">@Model[i].User.CompanyName</span>
                                                </div>
                                                <div class="col-md-6">
                                                    <b>Product: </b> <span style="margin-left:2px;">@Model[i].ProductName</span>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-12">
                                                    <p>
                                                        Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <b>Country: </b> <span style="margin-left:2px;">Country </span>
                                                </div>
                                                <div class="col-md-6">
                                                    <a href="/Product/Product/@Model[i].Id" class="btn btn-outline-primary btn-circle btn-sm mr-2 mb-2" style="float: right;">Contact Now</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                if (counter1 == 2)
                                {
                                    break;
                                }
                                counter1 = counter1 + 1;
                            }
                        }
                    </div>
                    @if (Model.Count() > 3)
                    {
                        <div class="carousel-item">
                            @{int counter2 = 3; }

                            @for (int i = counter2; i < Model.Count(); i++)
                            {
                                <div class="card mt-2" style="border-radius: 10px;">
                                    <div class="row">
                                        <div class="col-md-4" style="border-right: solid 1px rgba(0,0,0,.125);">
                                            <img src="~/B2b-theme/images/example.jpg" style="width: 100%; height:100%; border-radius:10px 0px 0px 10px; padding:5px;" />
                                        </div>
                                        <div class="col-md-8">
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <b>Company Name: </b> <span style="margin-left:2px;">@Model[i].User.CompanyName</span>
                                                </div>
                                                <div class="col-md-6">
                                                    <b>Product: </b> <span style="margin-left:2px;">@Model[i].ProductName</span>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-12">
                                                    <p>
                                                        Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <b>Country: </b> <span style="margin-left:2px;">Country </span>
                                                </div>
                                                <div class="col-md-6">
                                                    <a href="" class="btn btn-outline-primary btn-circle btn-sm mr-2 mb-2" style="float: right;">Contact Now</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                if (counter2 == 5)
                                {
                                    break;
                                }

                                counter2 = counter2 + 1;
                            }
                        </div>
                    }

                    @if (Model.Count() > 6)
                    {
                        <div class="carousel-item">

                            @{
                                int counter3 = 6;

                                for (int i = counter3; i < Model.Count(); i++)
                                {
                                    <div class="card mt-2" style="border-radius: 10px;">
                                        <div class="row">
                                            <div class="col-md-4" style="border-right: solid 1px rgba(0,0,0,.125);">
                                                <img src="~/B2b-theme/images/example.jpg" style="width: 100%; height:100%; border-radius:10px 0px 0px 10px; padding:5px;" />
                                            </div>
                                            <div class="col-md-8">
                                                <div class="row mt-4">
                                                    <div class="col-md-6">
                                                        <b>Company Name: </b> <span style="margin-left:2px;">@Model[i].User.CompanyName</span>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <b>Product: </b> <span style="margin-left:2px;">@Model[i].ProductName</span>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-md-12">
                                                        <p>
                                                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-md-6">
                                                        <b>Country: </b> <span style="margin-left:2px;">Country </span>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <a href="" class="btn btn-outline-primary btn-circle btn-sm mr-2 mb-2" style="float: right;">Contact Now</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    if (counter3 == 8)
                                    {
                                        break;
                                    }

                                    counter3 = counter3 + 1;
                                }
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    if (Model.Count() > 3)
    {
        <div class="row mt-3">
            <div class="col-md-8 ">
                <div class="controls-top mr-10" style="float:right;">
                    <a class="btn btn-outline-primary btn-circle btn-sm" href="#multi-item-example" data-slide="prev"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>
                    <a class="btn btn-outline-primary btn-circle btn-sm" href="#multi-item-example" data-slide="next"><i class="fa fa-chevron-right" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    }
}
